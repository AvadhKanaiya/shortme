{
    "manifest_version": 3,
    "name": "Short Me",
    "version": "1.0",
    "description": "A simple URL shortener extension",
    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/shortme_16.png",
            "48": "icons/shortme_48.png",
            "128": "icons/shortme_128.png"
        }
    },
    "icons": {
        "16": "icons/shortme_16.png",
        "48": "icons/shortme_48.png",
        "128": "icons/shortme_128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}